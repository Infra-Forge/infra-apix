#!/bin/bash
#
# Pre-commit hook for apix - OpenAPI spec drift detection
#
# This hook prevents commits that would cause the OpenAPI spec to drift
# from the actual code implementation.
#
# Installation:
#   make install-hooks
#   # OR manually:
#   cp .githooks/pre-commit .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit
#
# To bypass this hook (NOT RECOMMENDED):
#   git commit --no-verify
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Checking OpenAPI spec drift..."

# Check if apix CLI is available
if ! command -v apix &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  apix CLI not found, attempting to use 'go run ./cmd/apix'${NC}"
    APIX_CMD="go run ./cmd/apix"
else
    APIX_CMD="apix"
fi

# Find OpenAPI spec files (common locations)
SPEC_FILES=(
    "docs/openapi.yaml"
    "docs/openapi.json"
    "openapi.yaml"
    "openapi.json"
)

FOUND_SPEC=""
for spec in "${SPEC_FILES[@]}"; do
    if [ -f "$spec" ]; then
        FOUND_SPEC="$spec"
        break
    fi
done

if [ -z "$FOUND_SPEC" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  No OpenAPI spec found, skipping drift check${NC}"
    echo "   Expected locations: ${SPEC_FILES[*]}"
    exit 0
fi

echo "   Checking spec: $FOUND_SPEC"

# Generate fresh spec to temp file
TEMP_SPEC=$(mktemp)
trap "rm -f $TEMP_SPEC" EXIT

if ! $APIX_CMD generate --out "$TEMP_SPEC" 2>/dev/null; then
    echo -e "${RED}‚ùå Failed to generate OpenAPI spec${NC}"
    echo "   Run '$APIX_CMD generate' manually to see the error"
    exit 1
fi

# Compare generated spec with committed spec
if ! diff -q "$FOUND_SPEC" "$TEMP_SPEC" > /dev/null 2>&1; then
    echo -e "${RED}‚ùå OpenAPI spec drift detected!${NC}"
    echo ""
    echo "The generated OpenAPI spec differs from the committed version."
    echo "This means your code changes affect the API contract."
    echo ""
    echo "To fix this:"
    echo "  1. Run: make generate-spec"
    echo "     (or: $APIX_CMD generate --out $FOUND_SPEC)"
    echo "  2. Review the changes in $FOUND_SPEC"
    echo "  3. Add the updated spec to your commit:"
    echo "     git add $FOUND_SPEC"
    echo ""
    echo "To see the differences:"
    echo "  diff $FOUND_SPEC <($APIX_CMD generate)"
    echo ""
    echo "To bypass this check (NOT RECOMMENDED):"
    echo "  git commit --no-verify"
    echo ""
    exit 1
fi

echo -e "${GREEN}‚úÖ OpenAPI spec is up to date${NC}"
exit 0

